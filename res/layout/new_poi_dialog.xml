<TableLayout	android:id="@+id/TableLayout01" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				xmlns:android="http://schemas.android.com/apk/res/android">
				
				<TableRow	android:id="@+id/poiDialogTableRow00" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" >
					<TextView	android:textSize="15sp"
								android:textColor="#F00"
								android:paddingLeft="10sp"
							  	android:id="@+id/poiDialogError" 
							  	android:layout_width="wrap_content" 
							  	android:layout_height="wrap_content" />

				</TableRow>
				
			 	<TableRow	android:id="@+id/poiDialogTableRow02" 
			 				android:layout_width="wrap_content" 
			 				android:layout_height="wrap_content">
			 				<EditText	android:id="@+id/poiNewDialogNameText" 
			 							android:layout_width="wrap_content" 
			 							android:layout_height="wrap_content"
			 							android:singleLine="true"
			 							android:hint="Bezeichnung"/>
							<Button	android:text="@string/poiNewDialogButtonAdd" 
									android:id="@+id/poiDialogButtonAdd" 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"/>
							<Button	android:text="@string/poiNewDialogButtonAbort" 
									android:id="@+id/poiDialogButtonAbort" 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"/>
				</TableRow>
</TableLayout>
