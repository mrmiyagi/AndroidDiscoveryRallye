<TableLayout	android:id="@+id/TableLayout01" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				xmlns:android="http://schemas.android.com/apk/res/android">
				
				<TableRow	android:id="@+id/poiDialogTableRow01" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" >
					<TextView	android:text="@string/poiDialogTextRename"
								android:textSize="15sp"
								android:paddingLeft="10sp"
							  	android:id="@+id/poiDialogTextRename" 
							  	android:layout_width="wrap_content" 
							  	android:layout_height="wrap_content" />
				</TableRow>

			 	<TableRow	android:id="@+id/poiDialogTableRow02" 
			 				android:layout_width="wrap_content" 
			 				android:layout_height="wrap_content">
			 				<EditText	android:text="@string/poiDialogEditText" 
			 							android:id="@+id/poiDialogEditText" 
			 							android:layout_width="wrap_content" 
			 							android:layout_height="wrap_content"/>
							<Button	android:text="@string/poiDialogButtonRename" 
									android:id="@+id/poiDialogButtonRename" 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"/>
				</TableRow>

				<TableRow	android:id="@+id/poiDialogTableRow03" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content">
							<Button	android:text="@string/poiDialogButtonGoTo" 
									android:id="@+id/poiDialogButtonGoTo" 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"/>
							<Button android:text="@string/poiDialogButtonDelete" 
									android:id="@+id/poiDialogButtonDelete" 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content" />
				</TableRow>
</TableLayout>
